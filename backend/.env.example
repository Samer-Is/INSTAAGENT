# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin Credentials (set these in Azure App Service configuration)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=$2b$10$YourBcryptHashedPasswordHere

# Azure Cosmos DB Configuration
COSMOS_DB_ENDPOINT=https://your-cosmos-db.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-db-primary-key
COSMOS_DB_DATABASE_ID=insta-ai-agent

# Azure Key Vault Configuration
AZURE_KEY_VAULT_URL=https://your-key-vault.vault.azure.net/

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# Azure Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=uploads

# Azure Cognitive Search Configuration
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key
AZURE_SEARCH_INDEX_NAME=knowledge-base

# Azure Cognitive Services Configuration
AZURE_COGNITIVE_SERVICES_KEY=your-cognitive-services-key
AZURE_COGNITIVE_SERVICES_REGION=eastus 